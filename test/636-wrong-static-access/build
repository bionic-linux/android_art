#
# Compile src-ex with src/Holder.java but then delete Holder.java from the src-ex jar.
# (At runtime src2/Holder.java ends up being used instead).
#

if [[ "$USE_JACK" != true ]]; then
  cp src/Holder.java src-ex/Holder.java

  export ORIGINAL_JAVAC="$JAVAC"

  # Delete Holder.class after compiling it in src-ex jar so that it instead uses the src jar.
  function javac_wrapper {
    $ORIGINAL_JAVAC "$@"
    local stat=$?

    [[ -d classes-ex ]] && [[ -f classes-ex/Holder.class ]] && rm classes-ex/Holder.class

    return $stat
  }

  export -f javac_wrapper
  export JAVAC=javac_wrapper
fi

./default-build "$@"
