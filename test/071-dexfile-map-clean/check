./default-check $@
res=$?
# Just return success if fstype is tmpfs since we cannot have made the dex-file
# clean in that case. Condition it on DEX_LOCATION being visible so we only do
# this on host.
if [ $res != "0" ] &&
   [ -e $DEX_LOCATION ] &&
   [ $(uname) = "Linux" ] &&
   [ $(stat --file-system --format=%T $DEX_LOCATION) = "tmpfs" ]; then
  exit 0
fi

exit $res

