# make us exit on a failure
set -e

count=5000
echo "LMain;" >> profile

# Generate the other class.
other_file="src-art/Other.java"
echo "class Other {" >> "${other_file}"
echo "static String getString(int i) {" >> "${other_file}"
echo "switch(i) {" >> "${other_file}"
for i in $(seq 1 "$count"); do
  echo "  case ${i}: return \"string$i\";" >> "${other_file}"
done
echo "}" >> "${other_file}"
echo "return \"not found\";" >> "${other_file}"
echo "}" >> "${other_file}"
echo "}" >> "${other_file}"

./default-build "$@"
