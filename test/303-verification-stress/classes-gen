# Generate a big pile of classes with big <clinit>.

def createFiles(count, array_size):
  for i in range(count):
    name = f"src/Test{i:03}.java"
    with open(name, "wt") as fp:
      fp.write(f"public class Test{i:03} {{\n")
      fp.write(f"    static String[] array = new String[{array_size}];\n")
      fp.write("    static {\n")
      for k in range(array_size):
        fp.write(f"        array[{k}] = \"string_{k:04}\";\n")
      fp.write("    }\n")
      fp.write("}\n")

  with open("src/MainTest.java", "wt") as fp:
    fp.write("public class MainTest {\n")
    fp.write("    public static void run() {\n")
    for i in range(count):
        fp.write(f"        System.out.println(\"Create new Test{i:03}\");\n")
        fp.write(f"        new Test{i:03}();\n")
    fp.write("    }\n")
    fp.write("}\n")

def main():
  return createFiles(40, 2000)

if __name__ == '__main__':
  main()
