# Generate a big pile of interface classes.

# Create N interface files.
def createFiles(count):
  for i in range(count):
    with open(f"src/Interface{i:03}.java", "wt") as fp:
      fp.write(f"interface Interface{i:03} {{\n")
      if (i & 0x01) != 0:
        fp.write(f"    int func{i:03}();\n")
      fp.write(f"}}\n")

  with open("func-decl", "wt") as fp:
    fp.write("    implements\n")
    for i in range(count):
      fp.write(f"        Interface{i:03},\n")
    fp.write("\n")
    for i in range(1, count, 2):
      fp.write(f"    public int func{i:03}() {{ return {i}; }}\n")

def main():
  createFiles(100)

if __name__ == '__main__':
  main()
