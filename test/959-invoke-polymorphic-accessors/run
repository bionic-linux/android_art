EXTRA_ARGS=

for arg in $@
do
  if [ "$arg" == "--jvm" ]
  then
    # For the JVM run, unreflect setter is not allowed for static final fields.
    # See b/242985782.
    EXTRA_ARGS+=" --runtime-option -Dart.test.jvm=y"
    break
  fi
done

./default-run "$@" $EXTRA_ARGS
