# Run the test in one of 3 modes:
# 1) No oat code compiled -> use expected.no-compiled-code.txt
# 2) Oat code compiled, no profile -> use expected.no-profile.txt
# 3) Oat code compiled with profile -> use expected.profile.txt

# Note: `check` script always compares against 'expected.no-compiled-code.txt' first,
# otherwise it checks expected.txt
cp expected.no-profile.txt expected.txt

# Replace --random-profile with --profile and the expected.txt with expected.profile.txt
# Otherwise it runs as normal.
run_with_nonrandom_profile() {
  local args_original=("$@")
  local args=()

  for i in "${args_original[@]}"; do
    case $i in
      --random-profile)
        args+=(--profile)
        cp expected.profile.txt expected.txt
        ;;
      *)
        args+=("$1")
        ;;
    esac
    shift
  done

  "${RUN}" "${args[@]}"
}

run_with_nonrandom_profile "$@"
